-# - set_css 'site/home'

.signup
    = form_tag signup_path do
        = hidden_field_tag 'redirect', home_path
        %fieldset
            .field
                = label_tag 'name'
                = text_field_tag 'name'
            .field
                = label_tag 'email'
                = text_field_tag 'email'
            .field
                = label_tag 'password'
                = password_field_tag 'password'
            .field
                = label_tag 'confirm password'
                = password_field_tag 'password_confirmation'
            %menu.submit
                %button{ :type => "submit", :name => "commit" } Sign Up!

.login
    = form_tag login_path do
        = hidden_field_tag 'redirect', home_path
        %fieldset
            .field
                = label_tag 'email'
                = text_field_tag 'email'
            .field
                = label_tag 'password'
                = password_field_tag 'password'
            %menu.submit
                %button{ :type => "submit", :name => "commit" } Log in!
